<footer class="page-footer">
    <div id="sitemap">
        <div id="sitemap-inner" class="container">
            <div class="region region-sitemap">
                <section id="block-menu-block-1" class="block block-menu-block ">
                    <div class="menu-block-wrapper menu-block-1 menu-name-main-menu parent-mlid-0 menu-level-1">
                        <ul class="menu nav">
                            <li class="sub-list">
                                <a href="/">Home</a>
                                <ul class="menu nav">
                                    {% assign pages = site.pages | where: "parent", "/" | sort: "order" %}
                                    {% for page in pages %}
                                    {% assign content_size = page.content | strip | size %}
                                        <li>
                                            {% if content_size == 0 %}
                                                <a href="/Table-of-Contents#{{ page.title | replace:' ', '_' | downcase }}">{{ page.title }}</a>
                                            {% else %}
                                                <a href="{{ page.url }}">{{ page.title }}</a>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                    </div>
                </section>
            </div>
        </div>
    </div>
   <div class="footer-copyright">
        <div class="container">
          <div id="footer-left">
            Copyright &copy; CalConnect<sup>SM</sup>. <a href="https://www.calconnect.org/contact">Contact Us</a> | <a href="https://www.calconnect.org/about/policies/copyright-and-licensing">Copyright & Licensing</a>
          </div>
        </div>
    </div>
</footer>
